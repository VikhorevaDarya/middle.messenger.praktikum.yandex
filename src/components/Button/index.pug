mixin button(params={})
  -
    const { outline, type, id, value, disabled, additionalClass } = params
    const outlineClassName = outline ? 'button_outline' : ''
    const className = `button ${outlineClassName} ${additionalClass ? additionalClass : ''}`

  button(
  id=id
  type=type
  class=className
  value=value
  disabled=disabled
  )
    block