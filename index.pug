extends src/layouts/Main/index

mixin renderPageLink(path, label)
  a(href=`src/pages/${path}/index.html`).pages__link
    | #{label}

block content
  -
    const pages = [
      ['SignIn', 'Authorization'],
      ['SignUp', 'Registration'],
      ['Chat', 'Chat'],
      ['Settings', 'Settings'],
      ['NotFound', '404 Error page'],
      ['ServerError', '500 Error page']
    ]

  nav.pages
    ul.pages__list
      each page in pages
        li.pages__item
          -
            const [path, label] = page

          +renderPageLink(path, label)
      